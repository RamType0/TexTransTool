#pragma HLSL_Version 2018
#pragma ColorSpace Gamma
#pragma Key "Clip/Difference"
#pragma KeyName_jp "クリスタ/差の絶対値"

#include "./BlendColor.hlsl"
float4 ColorBlend(float4 BaseColor, float4 AddColor)
{
  if (BaseColor.a <= 0.0)
  {
    return AddColor;
  }
  if (AddColor.a <= 0.0)
  {
    return BaseColor;
  }
  float3 BlendColor = DifferenceComposite(BaseColor.rgb, AddColor.rgb);
  return ClipAlphaBlending(BaseColor, AddColor, BlendColor);
}
