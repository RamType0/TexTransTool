#pragma HLSL_Version 2018
#pragma ColorSpace Gamma
#pragma Key "HardLight"
#pragma KeyName_jp "ハードライト"

#include "./BlendColor.hlsl"
float4 ColorBlend(float4 BaseColor, float4 AddColor)
{
  if (BaseColor.a <= 0.0)
  {
    return AddColor;
  }
  if (AddColor.a <= 0.0)
  {
    return BaseColor;
  }
  float3 BlendColor = HardLightComposite(BaseColor.rgb, AddColor.rgb);
  return AlphaBlending(BaseColor, AddColor, BlendColor);
}
