#pragma HLSL_Version 2018
#pragma ColorSpace Gamma
#pragma Key "HardMix"
#pragma KeyName_jp "ハードミックス"

#include "./BlendColor.hlsl"
float4 ColorBlend(float4 BaseColor, float4 AddColor)
{
  if (BaseColor.a <= 0.0)
  {
    return AddColor;
  }
  if (AddColor.a <= 0.0)
  {
    return BaseColor;
  }
  float3 BlendColor = HardMixComposite(BaseColor.rgb, AddColor.rgb);
  return AlphaBlending(BaseColor, AddColor, BlendColor);
}
